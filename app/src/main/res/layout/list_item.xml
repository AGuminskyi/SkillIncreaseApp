<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID = "
        android:id="@+id/idTextView"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/idTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME = "
        android:id="@+id/nameTextView"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/idTextView"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/nameTextView"
        app:layout_constraintBaseline_toBaselineOf="@id/nameTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE = "
        android:id="@+id/ageTextView"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"/>

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ageTextView"
        app:layout_constraintBaseline_toBaselineOf="@id/ageTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER = "
        android:id="@+id/genderTextView"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/ageTextView"/>

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/genderTextView"
        app:layout_constraintBaseline_toBaselineOf="@id/genderTextView"/>



</android.support.constraint.ConstraintLayout>